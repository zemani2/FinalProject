<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/kidsNamesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose kid to view his report:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kidNamesRecyclerView"
        android:layout_below="@id/kidsNamesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"/>

<!--    <com.jjoe64.graphview.GraphView-->
<!--        android:id="@+id/graph"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_below="@id/kidNamesRecyclerView"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:padding="16dp" />-->

    <TextView
        android:id="@+id/stressHoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kidNamesRecyclerView"
        android:text="Stress Hours"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/stressHoursListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stressHoursLabel"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="16dp" />

</RelativeLayout>
